{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["es2017"],
        "module": "commonjs",
        "sourceMap": true,
        "strict": false,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "types": ["node"],
        "outDir": "build",
        "skipLibCheck": true
    },
    "include": ["src/*", "types/*"]
}
